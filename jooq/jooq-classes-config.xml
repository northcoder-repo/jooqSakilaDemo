<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Generator parameters -->
    <generator>
        <database>
            <name>org.jooq.meta.xml.XMLDatabase</name>
            <properties>
                <property>
                    <key>dialect</key>
                    <value>MYSQL</value>
                </property>
                <property>
                    <key>xmlFile</key>
                    <value>../src/main/resources/sakila_schema.xml</value>
                </property>
            </properties>
            <includes>.*</includes> 
            <inputSchema>sakila</inputSchema>
            <recordTimestampFields>last_update</recordTimestampFields>
        </database>
        <strategy>
            <matchers>
                <tables>
                    <table>
                        <!-- Just my personal choice...                             -->
                        <!-- Rename jOOQ's table classes - add suffix _TABLE to the -->
                        <!-- database table name, which then gets pascal-cased when -->
                        <!-- the Java object is generated by jOOQ.                  -->
                        <!-- This ensures jOOQ's table classes have different names -->
                        <!-- from the pojo (Java Record) classes.                   -->
                        <!-- Example: DB table name       = ACTOR                   -->
                        <!--          Adjusted table name = ACTOR_TABLE             -->
                        <!--          Table class         = ActorTable              -->
                        <!--          Pojo record         = Actor                   -->
                        <tableClass>
                            <expression>$0_TABLE</expression>
                            <transform>PASCAL</transform>
                        </tableClass>
                    </table>
                </tables>
            </matchers>
        </strategy>
        <generate>
            <pojos>true</pojos> 
            <pojosAsJavaRecordClasses>true</pojosAsJavaRecordClasses>
            <daos>false</daos>
            <pojosToString>false</pojosToString>
            <pojosEqualsAndHashCode>false</pojosEqualsAndHashCode>
            <validationAnnotations>false</validationAnnotations>
        </generate>
        <target>
            <!-- the following will result in files being created here:  -->
            <!-- generated-sources/org/northcoder/sakila/jooq/ -->
            <directory>generated-sources</directory>
            <packageName>org.northcoder.sakila.jooq</packageName>
        </target>
    </generator>
</configuration>
